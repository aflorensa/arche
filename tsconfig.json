{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "dist",
        "lib": [ "es6" ],
        "allowJs" : true
    },
    "filesGlob": [
        "./app/**/*.ts",
        "./test/**/*.ts",
        "./typings/index.d.ts",
        "./custom_typings/**/*.d.ts",
        "./node_modules/@types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "test/resources/sampleLanguages",
        "tmp",
        "test"
    ],
    "include": [
        "./app/rules/*.json",
        "./index.ts",
        "./app/**/*.ts"
    ]
}

